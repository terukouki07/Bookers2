<% if user_signed_in? %>
<!--サインインしているとき-->
<div>
  <%= link_to "Log-in", user_path(current_user.id) %>
</div>
<div>
  <%= link_to "Sign-up", user_path(current_user.id) %>
</div>
<% else %>
<!--サインインしていないとき-->
<div>
  <a href="/users/sign_in">Log in</a>
</div>

<div>
  <a href="/users/sign_up">Sign up</a>
</div>
<% end %>
