<h2>User info</h2>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th></th>
    </tr>
  </thead>
</table>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h2>Book detail</h2>
<table>
  <tbody>
      <tr>
        <td><p><%= @books.user.name %></p></td>
        <td><%= link_to @books.title, book_path(@books.id) %></td>
        <td><%= @books.body %></td>
        <td>
            <%= link_to "Edit", edit_book_path(@books.id) %>
        </td>
        <!--ここが分からない-->
        <td>
          <% if @books.user == current_user %>
            <%= link_to "Destroy", books_path(@books.id), method: :delete %>
          <% end %>
        </td>
      </tr>
  </tbody>
</table>