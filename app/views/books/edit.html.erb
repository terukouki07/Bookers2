<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <p><%= f.submit "Update Book" %></p>
<% end %>

<!--showへのリンク-->
<%= link_to "Show", book_path(@book.id) %>
<!--indexへのリンク-->
<%= link_to "Back", books_path %>