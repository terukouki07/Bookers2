<!--_new.html.erbへテンプレート化-->
<%= render 'books/new', book: @book, user: @user%>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= link_to book.title, book_path(book.id)%></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>