<h2>User info</h2>
<table>
  <thead>
    <%= image_tag user.get_profile_image(100,100) %>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </thead>
</table>


<h2>New book</h2>
<%= form_with model: book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>

<% end %>
