<h2>User info</h2>
<%= form_with model: @user do |f| %>
    <p>Name</p>
    <%= f.text_field :name %>

    <p>Image</p>
    <%= f.file_field :profile_image, accept: "image/*"%>

    <p>Introduction</p>
    <%= f.text_area :Introduction %>

    <div>
        <%= f.submit 'Update User' %>
    </div>
<% end %>